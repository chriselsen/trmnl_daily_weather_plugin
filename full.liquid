<div class="layout layout--col gap--medium">
  <div class="grid">
    <div class="row row--center col--span-3 col--end">
      <img class="weather-image" src="https://usetrmnl.com/images/plugins/weather/{{ image_day[0] }}">
    </div>
    <div class="col col--span-3 col--end gap--medium">
      <span class="title">Today: {{ condition[0] }}</span>
      <div class="item">
        <div class="meta"></div>
        <div class="icon">
          <img class="weather-icon" src="https://usetrmnl.com/images/plugins/weather/wi-thermometer.svg">
        </div>
        <div class="content">
          <span class="value value--small">{{ daily_temps_max[0] | round }}째</span>
          <span class="label">High</span>
        </div>
      </div>
      <div class="item">
        <div class="meta"></div>
        <div class="icon">
          <img class="weather-icon" src="https://usetrmnl.com/images/plugins/weather/wi-thermometer-exterior.svg">
        </div>
        <div class="content">
          <span class="value value--small">{{ daily_temps_min[0] | round }}째</span>
          <span class="label">Low</span>
        </div>
      </div>
    </div>

    <div class="col col--span-3 col--end gap--medium">
      <div class="item">
        <div class="meta"></div>
        <div class="icon">
          <img class="weather-icon" src="https://usetrmnl.com/images/plugins/weather/wi-rain.svg">
        </div>
        <div class="content">
          <span class="value value--small">{{ daily_rain_prob[0] | round }}%</span>
          <span class="label">Rain</span>
        </div>
      </div>
      <div class="item">
        <div class="meta"></div>
        <div class="icon">
          <img class="weather-icon" src="https://usetrmnl.com/images/plugins/weather/wi-hot.svg">
        </div>
        <div class="content">
          <span class="value value--small">{{ daily_uv_index[0] | round }}</span>
          <span class="label">UV Index</span>
        </div>
      </div>
    </div>
  </div>
  <!-- <div class="divider"></div> -->
  <!-- forecast -->
  <div class="grid grid--cols-4">
    {% for i in (1..4) %}
    <div class="col col--start gap--medium text--center bg--gray-75 rounded--small p--2">
      {% if forloop.index == 1 %}
      <span class="title text-stroke">{% if forloop.index == 1 %}Tomorrow{% else %}{{ daily_dates[i] | date: "%A" }}{% endif %}</span>
      {% else %}
      <span class="title text-stroke">{{ daily_dates[i] | date: "%A" }}</span>
      {% endif %}
      <div class="w--full">
        <img class="weather-icon image-stroke" src="https://usetrmnl.com/images/plugins/weather/{% if image_day[i] %}{{ image_day[i] }}{% else %}wi-day-sunny.svg{% endif %}">
        <br/>
        <span class="value value--xsmall text-stroke">{% if condition[i] %}{{ condition[i] }}{% else %}Sunny{% endif %}</span>
      </div>
      <div class="w--full">
        <span class="value value--xsmall text-stroke">{{ daily_temps_max[i] | round }}째 / {{ daily_temps_min[i] | round }}째</span>
      </div>
      <div class="w--full">
        <div class="flex flex--row gap--xsmall">
          <img class="weather-icon-mini image-stroke" src="https://usetrmnl.com/images/plugins/weather/wi-hot.svg">
          <span class="value value--xxsmall text-stroke mr--1">{{ daily_uv_index[i] | round }}</span>
          <img class="weather-icon-mini image-stroke" src="https://usetrmnl.com/images/plugins/weather/wi-rain.svg" />
          <span class="value value--xxsmall text-stroke">{{ daily_rain_prob[i] | round }}%</span>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
<div class="title_bar">
  <img class="image" src="https://usetrmnl.com/images/plugins/weather--render.svg">
  <h1 class="title">OpenWeather Forecast - Updated: {{ update_time | date: "%H:%M" }}</h1>
  <span class="instance">{{ trmnl.plugin_settings.custom_fields_values.location_name }}</span>
</div>